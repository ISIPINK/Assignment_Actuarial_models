@article{frees_understanding_1998,
  title    = {Understanding {Relationships} {Using} {Copulas}},
  volume   = {2},
  issn     = {1092-0277, 2325-0453},
  url      = {http://www.tandfonline.com/doi/abs/10.1080/10920277.1998.10595667},
  doi      = {10.1080/10920277.1998.10595667},
  abstract = {This article introduces actuaries to the concept of copulas, a tool for understanding relationships among multivariate outcomes. A copula is a function that links univariate marginals to their full multivariate distribution. Copulas were introduced in 1959 in the context of probabilistic metric spaces. The literature on the statistical properties and applications of copulas has been developing rapidly in recent years. This article explores some of these practical applications, including estimation of joint life mortality and multidecrement models. In addition, we describe basic properties of copulas, their relationships to measures of dependence, and several families of copulas that have appeared in the literature. An annotated bibliography provides a resource for researchers and practitioners who wish to continue their study of copulas. For those who wish to use copulas for statistical inference, we illustrate statistical inference procedures by using insurance company data on losses and expenses. For these data, we (1) show how to ﬁt copulas and (2) describe their usefulness by pricing a reinsurance contract and estimating expenses for pre-speciﬁed losses.},
  language = {en},
  number   = {1},
  urldate  = {2024-04-05},
  journal  = {North American Actuarial Journal},
  author   = {Frees, Edward W. and Valdez, Emiliano A.},
  month    = jan,
  year     = {1998},
  pages    = {1--25},
  file     = {Frees en Valdez - 1998 - Understanding Relationships Using Copulas.pdf:C\:\\Users\\isido\\Zotero\\storage\\5KE5E94Y\\Frees en Valdez - 1998 - Understanding Relationships Using Copulas.pdf:application/pdf}
}

